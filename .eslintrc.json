{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "d3": "readonly",
    "nodes": "readonly",
    "links": "readonly",
    "metrics": "readonly",
    "layerColors": "readonly",
    "layerNames": "readonly"
  },
  "rules": {
    "indent": ["warn", 4],
    "quotes": ["warn", "single"],
    "semi": ["warn", "always"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off"
  },
  "ignorePatterns": ["dist/", "node_modules/", "*.config.js"]
}
